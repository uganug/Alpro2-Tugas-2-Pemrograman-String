//3. Buatlah program untuk mengenkripsi sebuah pesan yaitu dengan mengganti masing-masing karakter dengan karakter lain

#include <iostream>
#include <string.h>
using namespace std;

int main(){
	char senten[100], kalim[100];
	
	cout<<"Input kalimat : ";
	gets(senten);
	
	cout<<"Input kalimat pengganti : ";
	gets(kalim);
	
	strcpy(senten,kalim);
	cout<<"Kalimat setelah diganti : "<<senten; //nilai dari variabel kalim disalin ke variabel senten
}
